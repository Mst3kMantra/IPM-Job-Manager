<Window x:Class="IPM_Job_Manager_net.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPM_Job_Manager_net"
        mc:Ignorable="d"
        Title="Notes Editor" Height="350" Width="560"
        WindowStartupLocation="CenterOwner">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5" Background="LightGray">
            <Label Style="{StaticResource JobTitle}" Grid.Column="0" Padding="10px" Margin="0,0,0,0" Background="LightGray"  VerticalAlignment="Top">Notes Editor</Label>
            <TextBox SpellCheck.IsEnabled="True" AcceptsTab="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Focusable="True" x:Name="txtNotes" Height="200"></TextBox>
        </StackPanel>
        <Button HorizontalAlignment="Right"  Grid.Row="1" x:Name="btnSaveNotes" Click="btnSaveNotes_Click" Margin="0,0,10,0" Height="30" Width="150">Save Notes</Button>
    </Grid>
</Window>
